# LMArena Gateway Environment Configuration
# Copy this file to .env and customize for your environment

# LMArenaBridge Configuration
LMARENA_BRIDGE_BASE_URL=http://127.0.0.1:5102
LMARENA_BRIDGE_API_KEY=

# yupp2Api Provider Configuration
YUPP2_API_ENABLED=true
YUPP2_API_BASE_URL=http://127.0.0.1:5103
YUPP2_API_KEY=
YUPP2_API_TIMEOUT=30
YUPP2_API_RETRY_ATTEMPTS=3

# Flask Auxiliary Services Configuration
FLASK_SERVICES_ENABLED=true
FLASK_SERVICES_BASE_URL=http://127.0.0.1:5104
FLASK_SERVICES_API_KEY=

# Enhanced Session Management
GATEWAY_MAX_SESSIONS_PER_DOMAIN=100
GATEWAY_SESSION_CLEANUP_DAYS=30
GATEWAY_ENABLE_SESSION_ANALYTICS=true
GATEWAY_CONCURRENT_SESSIONS_LIMIT=10

# Gateway Configuration
GATEWAY_LOG_LEVEL=INFO

# Security Configuration
GATEWAY_API_KEY=
GATEWAY_RATE_LIMIT_PER_MINUTE=60

# Storage Configuration
STORAGE_PATH=../storage/sessions.json

# Development/Debug
DEBUG_MODE=false
LOG_REQUESTS=false

# cPanel Specific Settings (uncomment for cPanel deployment)
# CPANEL_MODE=true
# CPANEL_PYTHON_APP_URL=https://your-domain.com/flask
# CPANEL_DOCUMENT_ROOT=/public_html/api/public
