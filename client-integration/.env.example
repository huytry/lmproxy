# Environment Configuration for LMArenaBridge Client
# Copy this file to .env and update with your actual values

# ============================================
# PLATFORM INTEGRATION SETTINGS
# ============================================

# Platform connection details (REQUIRED)
PLATFORM_URL=https://your-platform-domain.com/api
CLIENT_ID=your-client-id-here
API_KEY=your-api-key-here

# ============================================
# LMARENA SESSION CONFIGURATION
# ============================================

# LMArena session IDs (REQUIRED - get these from id_updater.py)
LMARENA_SESSION_ID=YOUR_SESSION_ID_HERE
LMARENA_MESSAGE_ID=YOUR_MESSAGE_ID_HERE

# ============================================
# PERFORMANCE SETTINGS
# ============================================

# Request timeout settings
STREAM_TIMEOUT=360
REQUEST_TIMEOUT=300
HEARTBEAT_INTERVAL=30

# Concurrency settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_QUEUE_SIZE=100

# Connection settings
RECONNECT_DELAY=5
MAX_RECONNECT_ATTEMPTS=10

# ============================================
# LOGGING AND MONITORING
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable detailed logging
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# SECURITY SETTINGS
# ============================================

# Enable request validation
ENABLE_REQUEST_VALIDATION=true

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=*

# Enable CORS for development
ENABLE_CORS=true

# ============================================
# CACHING SETTINGS (Optional)
# ============================================

# Enable response caching
ENABLE_RESPONSE_CACHING=false
CACHE_TTL_SECONDS=300

# Redis connection (if using caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# MONITORING SETTINGS (Optional)
# ============================================

# Grafana admin password
GRAFANA_PASSWORD=admin

# Prometheus settings
PROMETHEUS_RETENTION=200h

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Enable debug mode
DEBUG_MODE=false

# Mock LMArena responses for testing
MOCK_LMARENA_RESPONSES=false

# Local testing port
LOCAL_TESTING_PORT=5102

# ============================================
# DOCKER SETTINGS
# ============================================

# Container resource limits
MEMORY_LIMIT=1G
CPU_LIMIT=1.0
MEMORY_RESERVATION=256M
CPU_RESERVATION=0.25

# ============================================
# ADVANCED SETTINGS
# ============================================

# Load balancing preference
PREFERRED_ROUTING_STRATEGY=least_load

# Rate limiting (enforced by platform)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_DAY=1000

# Connection pool settings
CONNECTION_POOL_SIZE=10

# Enable compression
ENABLE_COMPRESSION=true

# Health check settings
HEALTH_CHECK_INTERVAL=60

# ============================================
# PLATFORM FEATURES
# ============================================

# Client capabilities (comma-separated)
CLIENT_CAPABILITIES=chat,models,images

# Enable auto-updates
ENABLE_AUTO_UPDATE=true

# Idle restart settings
ENABLE_IDLE_RESTART=false
IDLE_RESTART_TIMEOUT=300

# ============================================
# NETWORK SETTINGS
# ============================================

# Bind address
BIND_ADDRESS=0.0.0.0

# API port
API_PORT=5102

# ID updater port
ID_UPDATER_PORT=5103

# ============================================
# SSL/TLS SETTINGS (Optional)
# ============================================

# Enable HTTPS
ENABLE_HTTPS=false

# SSL certificate paths
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# ============================================
# BACKUP AND RECOVERY
# ============================================

# Enable configuration backup
ENABLE_CONFIG_BACKUP=true

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup retention (days)
BACKUP_RETENTION=7
